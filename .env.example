# ============================================
# AI Mindful Journal - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# Database
# ============================================
DB_PASSWORD=your-secure-database-password

# ============================================
# Directus CMS
# ============================================
# Generate random values: openssl rand -hex 32
DIRECTUS_KEY=replace-with-random-uuid-or-hex
DIRECTUS_SECRET=replace-with-random-secret-key
ADMIN_EMAIL=admin@mindfuljournal.app
ADMIN_PASSWORD=your-admin-password

# API Token for backend (generate in Directus after setup)
DIRECTUS_TOKEN=your-directus-api-token
DIRECTUS_URL=http://localhost:8055

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# Get from @BotFather

# Webhook URL (for production)
WEBHOOK_URL=https://your-domain.com/webhook

# Admin Telegram IDs (comma-separated)
ADMIN_TELEGRAM_IDS=437257453

# ============================================
# OpenAI API
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# Adsgram (заглушка пока)
# ============================================
ADSGRAM_BLOCK_ID=your-adsgram-block-id
ADSGRAM_ENABLED=false

# ============================================
# App Settings
# ============================================
NODE_ENV=development
PORT=3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# ============================================
# Pricing (in Telegram Stars)
# ============================================
PRICE_BASIC_MONTHLY=50
PRICE_PREMIUM_MONTHLY=150

# Stars to USD rate (1 Star ≈ $0.02)
STARS_TO_USD_RATE=0.02

# ============================================
# Redis (optional)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Internal API Key (for Directus → Bot communication)
# ============================================
# Generate: openssl rand -hex 32
INTERNAL_API_KEY=your-internal-api-secret-key
