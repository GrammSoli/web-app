# ============================================
# Server Environment Variables
# ============================================
# Copy to .env and fill in your values

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:mindful_secure_2024@localhost:5432/mindful_journal?schema=public"

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
WEBAPP_URL=https://your-webapp-url.com

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Server
PORT=3000
NODE_ENV=development

# CORS (for production)
CORS_ORIGIN=https://your-webapp-url.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Internal API (for Directus integration)
INTERNAL_API_KEY=your-internal-secret-key

# Webhook (for production)
WEBHOOK_URL=https://your-server-url.com

# Admin Telegram IDs
ADMIN_TELEGRAM_IDS=437257453

# Platega (card payments)
PLATEGA_MERCHANT_ID=your-platega-merchant-id
PLATEGA_API_SECRET=your-platega-api-secret

# Logging
LOG_LEVEL=debug
